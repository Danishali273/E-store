# Flask secret key (use a random, strong key)
SECRET_KEY=your-secret-key-here

# Database URL (e.g., sqlite:///instance/estore.db or postgres://user:pass@host:port/dbname)
DATABASE_URL=sqlite:///instance/estore.db

# SMTP email settings
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USE_SSL=False
MAIL_USERNAME=youremail@example.com
MAIL_PASSWORD=your-email-password-or-app-token
MAIL_DEFAULT_SENDER=youremail@example.com
# Google OAuth configuration
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here
